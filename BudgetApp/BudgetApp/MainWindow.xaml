<Window x:Class="BudgetApp.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BudgetApp.View"
        mc:Ignorable="d"
        Title="Budget Application" Height="450" Width="800">
    <Grid>
        <Label x:Name="Title" Content="Budget Making Application" HorizontalAlignment="Center" Margin="0,10,0,0" FontWeight="Bold" VerticalAlignment="Top"/>
        <Button x:Name="LoadButton" Content="Load" HorizontalAlignment="Center" VerticalAlignment="Center" Width="75" Margin="250,0,0,0" Click="LoadButton_Click"/>
        <Button x:Name="SaveButton" Content="Save" HorizontalAlignment="Center" VerticalAlignment="Center" Width="75" Margin="0,0,250,0" Click="SaveButton_Click"/>
        <DataGrid x:Name="ExpenseDataGrid" HorizontalAlignment="Left" Height="102" Margin="234,253,0,0" VerticalAlignment="Top" Width="324" 
                  ItemsSource="{Binding Expenses}" AutoGenerateColumns="True" ColumnWidth="*"/>
    </Grid>
</Window>
